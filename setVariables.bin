#!/usr/bin/env bash
setVariables(){
#****************************************
#		NAMESPACES		#
#****************************************
	export NAMESPACE="containerNameSpace"

#****************************************
#		TOR VARIABLES		#
#****************************************
	export TOR="DTPA"
	export TOR_IP="10.1.1.1/24"
	export TOR_VERSION="7.5.6"
#	REPO_NAME_TOR="#"

#****************************************
#		NGINX VARIABLES		#
#****************************************
	export NGINX="DA"
	export NGINX_IP="10.1.1.2/24"
	export NGINX_VERSION="1.15.2"
#	REPO_NAME_NGINX="#"

#****************************************
#		DOCKER VARIABLE		#
#****************************************
#To update this variable the correct GPG signature can be found
#here: https://docs.docker.com/install/linux/docker-ce/ubuntu/#upgrade-docker-ce
#Copy only the last 8 digits to the below variable

	export DOCKER_GPG_KEY="0EBF CD88"

#****************************************
#		SPLASH SCREEN VARIABLES	#
#****************************************
	export SPLASHSCREEN="https://www.duckduckgo.com"


}


if setVariables; then
	echo "*****************************"
	echo "Variables set successfully!"
        echo "*****************************"
else
        echo "*************************************************************"
	echo "Failure when setting variables!"
	echo "Check setVariables to ensure version numbers are correct!"
        echo "*************************************************************"
fi
#Run setup as child process to keep variables as part of parent tree
./setup
